<% if @user.present? %>
  <% @user.each do |user| %>
    <%= user.name %>, <%= user.email %> <br>
      Registered at <%= user.created_at.strftime("%B %d, %Y") %> <br>
    <%= link_to "Update Profile", edit_user_path(user) %> 
     |  <%= link_to "Delete Profile", user, data: { "turbo-method": :delete,
                                        turbo_confirm: "You sure?" } %> <br>
    <hr class="my-4" />
  <% end %>
  <div class="d-flex justify-content-center my-4">
    <%= will_paginate @user %>
  </div> 
<% else %>
  <p>No users found.</p>
<% end %>
