<% provide(:title, 'Upload') %>

<div class="container">
  <h1 class="text-center mt-4">Upload New Blog</h1>

  <div class="row">
    <div class="col-md-6 mx-auto">
      <%= form_with(model: @blog_post) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        
        <div class="mb-3">
          <%= f.label :title, class: "form-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :summary, class: "form-label" %>
          <%= f.text_field :summary, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :content, class: "form-label" %>
          <%= f.text_area :content, placeholder: "Compose new micropost...", class: "form-control" %>
        </div>

        <%= f.submit "Upload", class: "btn btn-primary btn-block mt-3 mb-5" %>
      <% end %>
    </div>
  </div>
</div>
