<% if request.path == about_path %>
<header class="masthead" style="background-image: url('<%= asset_path("about-bg.jpg") %>')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>About Us</h1>
                    <span class="subheading">Learn more about our company</span>
                </div>
            </div>
        </div>
    </div>
</header>
<% elsif request.path == root_path %>
<header class="masthead" style="background-image: url('<%= asset_path("home-bg.jpg") %>')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>Clean Blog</h1>
                    <span class="subheading">A Blog Theme by Start Bootstrap</span>
                </div>
            </div>
        </div>
    </div>
</header>
<% elsif request.path == blog_post_path %>
<header class="masthead" style="background-image: url('<%= asset_path('post-bg.jpg') %>')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="post-heading">
                    <h1>Become a Blogger</h1>
                    <h2 class="subheading">Upload your blogger</h2>
                    <span class="meta">
                        Let's Go!
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>
<% elsif request.path == login_path %>
<div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="<%= asset_path('about-bg') %>" class="d-block w-100" alt="..." style="opacity: 0.5;">
    </div>
    <div class="carousel-item">
